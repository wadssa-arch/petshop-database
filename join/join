------Consulta + Pet + Veterinario-----

select
    c.id_consulta,
    c.data AS Data_consulta,
    p.nome AS nome_animal,
    p.especie,
    p.idade,
    cli.nome AS nome_cliente,
    cli.telefone AS telefone_cliente,
    v.nome AS nome_veterinario
    
FROM consulta c    ---tabela principapl--
JOIN Pet p
    ON p.id_pet = c.id_pet  -- tabela join com consulta + PET
JOIN cliente cli
    ON cli.id_cliente = p.id_cliente  ---aqui join pet + cliente
JOIN veterinario v
    ON v.id_veterinario = c.id_veterinario;
    
--- Filtrar Apenas Especie--
select 
    p.nome AS nome_animal,
    p.especie,
    c.data AS data_consulta
FROM consulta c 
JOIN pet p
    ON p.id_pet = c.id_pet
WHERE p.especie ='cachorro';

-- UPPER ficou maiusculo e LOWER fica minusculo--
select
UPPER (nome) AS nome_animal,
LOWER (especie) AS especie_animal
FROM Pet;

-----deletar----

-- DELETE 1: Excluir a aplicação de medicamento de uma consulta (tabela N:N, essencial para integridade)
DELETE FROM Medicamento_Aplicado
WHERE id_consulta = 301 AND id_medicamento = 201;

-- DELETE 2: Excluir a consulta (Só é possível após remover referências em Medicamento_Aplicado)
DELETE FROM Consulta
WHERE id_consulta = 301;

-- DELETE 3: Excluir um Pet (Só é possível após remover referências em Consulta)
DELETE FROM Pet
WHERE id_pet = 1;


----update---

-- UPDATE 1: Corrigir nome de cliente
UPDATE "Tabela Cliente"
SET nome = 'Maria Wylkemberg' -- String precisa de aspas simples
WHERE id_cliente = 1;

-- UPDATE 2: Corrigir quantidade de estoque de um medicamento
UPDATE Medicamento
SET quantidade = 100 -- Define nova quantidade
WHERE id_medicamento = 202;

-- UPDATE 3: Corrigir telefone de um veterinário
UPDATE Veterinario
SET telefone = '21980000000'
WHERE id_veterinario = 102;